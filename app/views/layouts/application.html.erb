<!DOCTYPE html>
<html>
  <head>
    <title>Easyjobforyou</title>
    <!-- jQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

	<!-- Latest compiled and minified JavaScript -->
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>

	
  </head>

  <body>
    <% if content_for? :menu %>
      <div class="container-header">
        <div class="container container-header">
          <div class="row">
            <%= yield :menu %>
            <% if current_page?(tasks_path) %>
              <div class="col-xs-5 container-search">
                <%= form_tag(tasks_path, :method => "get", id: "search-form") do %>
                  <%= text_field_tag :search, params[:search], placeholder: "Ricerca per Note, Chi o Stato", class: "search" %>
                  <%= submit_tag "Cerca", class: "btn btn-default btn-sm" %>
                <% end %>
              </div>
            <% else %>
              <div class="col-xs-5 container-search">

              </div>
            <% end %>
            <div class="col-xs-1">
              <% if session[:user_id] %>
                <%= button_to 'Logout', logout_path, method: :delete, class:"btn btn-default btn-xs logout-button pull-right" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  
    <%= yield %>
  </body>
</html>
