<div>
	<% if flash[:alert] %>
	<p id="notice"><%= flash[:alert] %></p>
	<% end %>
	<%= form_tag do %>
	<fieldset>
		<legend>Fai il Log In</legend>
		<div>
			<%= label_tag :name, 'Nome:' %>
			<%= text_field_tag :name, params[:name] %>
		</div>
		<div>
			<%= label_tag :password, 'Password:' %>
			<%= password_field_tag :password, params[:password] %>
		</div>
		<div>
			<%= submit_tag "Login", class:"aggiungi" %>
			<%= link_to 'Registrati', new_user_path %>
		</div>
	</fieldset>
	<% end %>
</div>